<Window x:Class="Admin.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Admin"
        mc:Ignorable="d"
        Title="Register" Height="300" Width="500" MaxHeight="300" MinHeight="300" MaxWidth="500" MinWidth="500">
    <Grid Background="#1C1C1C">
        <Border MinWidth="200" Margin="88,43,94,73" Background="#FFFFF0" VerticalAlignment="Center" Padding="40" MaxWidth="200" CornerRadius="20" Height="153"/>
        
        <TextBox x:Name ="Login" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="120" Margin="183,50,0,0" />
        <TextBox x:Name ="Name" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="120" Margin="183,150,0,0" />
        <TextBox x:Name ="Password" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="120" Margin="183,100,0,0" />

        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="183,201,0,0" VerticalAlignment="Top" Width="112" Height="37" Click="Button_Register"/>

    </Grid>
</Window>
